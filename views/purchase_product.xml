<odoo>
    <data>
        <record id=" purchase_product_tree" model="ir.ui.view">
            <field name="name">Purchase Product Tree</field>
            <field name="model">purchase.product</field>
            <field name="arch" type="xml">
                <tree string="Purchase Tree">
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="quality"/>
                    <field name="cost"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record id="purchase_product_form" model="ir.ui.view">
            <field name="name">Purchase Product Form</field>
            <field name="model">purchase.product</field>
            <field name="arch" type="xml">
                <form string="Purchase Form">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="quality"/>
                            <field name="cost"/>
                            <field name="total"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>